# Copy this file to `.env` and fill in the values.
#
# This file is sourced by `bash` (arrays are supported).

# VPN endpoint URL for openconnect-sso
WORK_VPN_ENDPOINT_URL="https://vpn.example.com/"

# Corporate DNS domain to scope via /etc/resolver/<domain>
WORK_VPN_CORP_DOMAIN="corp.example.com"

# Corporate DNS servers (order matters)
WORK_VPN_CORP_DNS_SERVERS=("10.0.0.10" "10.0.0.11")

# Network service names to reset to DHCP on cleanup (e.g. dock Ethernet + Wi-Fi)
WORK_VPN_NETWORK_SERVICES=("USB 10/100/1000 LAN" "Wi-Fi")
